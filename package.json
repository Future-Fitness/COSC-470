{
  "name": "cosc-470",
  "private": true,
  "packageManager": "pnpm@9",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "start:api": "pnpm --filter api dev",
    "start:admin": "pnpm --filter admin dev",
    "start:app": "pnpm --filter app start",
    "infra:up": "docker compose -f infra/docker-compose.yml up -d",
    "infra:down": "docker compose -f infra/docker-compose.yml down -v"
  }
}
